{% extends 'base.html.twig' %}

{% block title %}REGISTER - Sortie.com{% endblock %}

{% block body %}

    <section class="mt-32 pb-32">

        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, { 'attr': { 'class': 'registration-form' } }) }}

            {{ form_row(registrationForm.email, {
                'attr': { 'class': 'form-control input', 'placeholder': 'Enter your email' }
            }) }}

            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': { 'class': 'form-control', 'placeholder': 'Enter your password' }
            }) }}

            {{ form_row(registrationForm.agreeTerms, {
                'label': 'I am not a robot',
                'attr': { 'class': 'form-check-input' }
            }) }}

            <button type="submit" class="btn">Register</button>
        
        {{ form_end(registrationForm) }}

    </section>

{% endblock %}

