<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <!-- Ajout du bloc stylesheets pour les pages spécifiques -->
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script>
                // Javascript pour le menu burger
                function toggleMenu() {
                    const menu = document.getElementById('menu');
                    menu.classList.toggle('hidden');
                }
            </script>
        {% endblock %}
    </head>
    <body>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% if label == 'success' %}
                <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                    <span class="font-medium"></span> {{ message }}
                </div>
            {% elseif label == 'error' %}
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <span class="font-medium"></span> {{ message }}
                </div>
            {% elseif label == 'info' %}
                <div class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
                    <span class="font-medium"></span> {{ message }}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}

    {% if show_nav is not defined or show_nav %}
        <header class="text-gray-600 header body-font">
            <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
                <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                    </svg>
                    <span class="ml-3 text-xl text-white">Sortir.com</span>
                </a>
                
                <!-- Menu burger pour mobile -->
                <button onclick="toggleMenu()" class="text-white md:hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white" viewBox="0 0 24 24">
                        <path d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>

                <!-- Menu de navigation -->
                <nav id="menu" class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center hidden md:flex">
                    <a class="mr-16 text-2xl hover:text-white-900 text-white transform motion-reduce:transform-none hover:-translate-y-1 hover:scale-110 transition ease-in-out duration-300" href="{{ path('app_main') }}">Main</a>
                    <a class="mr-16 text-2xl hover:text-white-900 text-white transform motion-reduce:transform-none hover:-translate-y-1 hover:scale-110 transition ease-in-out duration-300" href="{{ path('app_register') }}">Register</a>
                    <a class="mr-16 text-2xl hover:text-white-900 text-white transform motion-reduce:transform-none hover:-translate-y-1 hover:scale-110 transition ease-in-out duration-300" href="{{ path('app_trip_list') }}">Trip List</a>
                    <a class="mr-16 text-2xl hover:text-white-900 text-white transform motion-reduce:transform-none hover:-translate-y-1 hover:scale-110 transition ease-in-out duration-300" href="{{ path('app_trip_create') }}">Trip Create</a>
                </nav>
                <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
                    <a class="mr-5 text-2xl hover:text-white-900 text-white" href="{{ path('app_logout') }}">Logout</a>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                    </svg>
                </a>
            </div>
        </header>
    {% endif %}

    {% block body %}{% endblock %}

    </body>
</html>