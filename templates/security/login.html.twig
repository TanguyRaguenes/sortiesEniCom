{% extends 'base.html.twig' %}

{% block title %}LOG IN - Sortie.com{% endblock %}

{% block body %}

    <div class="w-full h-full flex flex-col justify-center text-center">

        <h1 class="text-3xl font-semibold mb-6 text-purple-600">Please sign in</h1>


        <form class="w-11/12 flex flex-col items-center border-2 border-purple-300 rounded-lg mx-auto p-6" action="" method="post">

            <div class="w-full flex flex-col items-center" >
                <label for="username" class="tw_p">Email</label>
                <input type="email" name="_username" id="username" value="{{ last_username }}"
                    class="tw_input"
                    autocomplete="email" required autofocus>
            </div>

            <div class="w-full flex flex-col items-center">
                <label for="password" class="tw_p">Password</label>
                <input type="password" name="_password" id="password"
                    class="tw_input"
                    autocomplete="current-password" required>
            </div>

            <div class="flex items-center">
                <input type="checkbox" name="_remember_me" id="remember_me"
                    class="h-5 w-5 text-purple-600 focus:ring-purple-500 border-purple-300 rounded-lg bg-white transition duration-300 ease-in-out transform hover:scale-105">
                <label for="remember_me" class="ml-2 text-lg text-gray-900">Se souvenir de moi</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="tw_btn w-11/12">
                Sign in
            </button>

        </form>
    </div>
{% endblock %}