{% extends 'base.html.twig' %}

{% block title %}Profil !{% endblock %}

{% block body %}

<section class="mt-32 pb-32">

    <a class="tw_btn block w-1/2 mx-auto" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Edit</a>

    <h1> Profil </h1>

    <p><strong>Name :</strong> {{ participant.name }}</p>
    <p><strong>First Name :</strong> {{ participant.firstName }}</p>
    <p><strong>Username :</strong> {{ participant.username }}</p>
    <p><strong>Email:</strong> {{ participant.email }}</p>
    <p><strong>Phone:</strong> {{ participant.phone }}</p>

    <button type="submit" class="btn">Edit</button>

</section>

{% endblock %}
