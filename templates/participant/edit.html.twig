{% extends 'base.html.twig' %}

{% block title %}Hello Participant!{% endblock %}

{% block body %}

    <section class="mt-32 pb-32 text-center">

        <a class="tw_btn block w-1/2 mx-auto" href="{{ path('app_participant_profil')}}">Back</a>

        <h1 class="tw_h1 mt-4 mb-4">Let's customize your lair !</h1>

            

            {{ form_start(form) }}

            <div class="border-2 rounded-lg w-11/12 bg-lime-100 flex flex-col items-center mx-auto">

                <div class="tw_formItem">
                    {{ form_label(form.name,null,{
                        'label_attr':{'class':'text-xl'}
                    })}}
